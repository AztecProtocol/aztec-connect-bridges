{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext", "es2017.object", "DOM.Iterable"],
    "outDir": "dest",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "include": ["client", "typechain-types"],
  "files": ["hardhat.config.ts"]
}
